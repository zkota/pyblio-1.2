#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

package=pybliographer

build:
	$(checkdir)
	./configure --prefix=`pwd`/debian/tmp/usr
	$(MAKE)
	touch build

clean:
	$(checkdir)
	-rm -f build
	-$(MAKE) distclean
	-rm -f `find . -name "*~"`
	-rm -f pybliographer pybliographic.keys
	-rm -rf `find scripts -type l` scripts/pybscript
	-rm -rf debian/tmp debian/files* core debian/substvars

binary-indep: checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	-rm -rf debian/tmp
	install -d debian/tmp
	$(MAKE) install
	cd debian/tmp && for i in `find . -type f`; do sed 's/\/usr\/src\/pybliographer\-0\.9\.9\/debian\/tmp\//\//g' $$i > $$i.new; mv $$i.new $$i; done
	cd debian/tmp/usr/share/pybliographer && for i in `find . -type f`; do sed 's/\/usr\/local\/bin\//\/usr\/bin\//g' $$i > $$i.new; mv $$i.new $$i; done
	chmod 755 debian/tmp/usr/share/pybliographer/*
	chmod 755 debian/tmp/usr/bin/*
	chmod -R 755 debian/tmp/usr/lib/*
	rm -f `find debian/tmp/usr/share/pybliographer -name "*.pyc"`
# Must have debmake installed for this to work. Otherwise please copy
# /usr/bin/debstd into the debian directory and change debstd to debian/debstd
	debstd -u ChangeLog NEWS README TODO 
	dpkg-gencontrol -isp
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg --build debian/tmp ..

define checkdir
	test -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
